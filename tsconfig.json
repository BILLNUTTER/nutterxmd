{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types",
            "./shared"
        ]
    },
    "include": [
        "./index.ts",
        "./controllers/**/*.ts",
        "./middlewares/**/*.ts",
        "./models/**/*.ts",
        "./routes/**/*.ts",
        "./services/**/*.ts",
        "./sockets/**/*.ts",
        "./subscriptions/**/*.ts",
        "./utils/**/*.ts",
        "./shared/**/*.ts",
        "./models"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}