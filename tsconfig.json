{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types",
            "./shared"
        ]
    },
    "include": [
        "./*.ts",
        "./routes",
        "./controllers",
        "./utils",
        "./shared"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}