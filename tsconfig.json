{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./", // ✅ Recommended
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node", // ✅ Required for resolving packages properly
        "skipLibCheck": true,
        "resolveJsonModule": true, // ✅ If you ever import .json files
        "typeRoots": [
            "./node_modules/@types",
            "./shared"
        ]
    },
    "include": [
        "./*.ts",
        "./routes",
        "./controllers",
        "./utils",
        "./shared"
    ],
    "exclude": [
        "node_modules",
        "dist" // ✅ Don't compile dist again
    ]
}